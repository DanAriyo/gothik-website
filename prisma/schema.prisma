generator client {
  provider        = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  // url rimane rimosso perch√© lo gestisce l'adapter
}

// Qui definiamo la tabella per i tuoi prodotti Gothik
model Product {
  id          String   @id @default(cuid())
  name        String
  description String?
  price       Float
  imageUrl    String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
